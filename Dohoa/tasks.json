{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build SFML App",
            "type": "shell",
            "command": "g++",
            "args": [
                "main.cpp",
                "-o", "app.exe",
                "-IC:/msys64/mingw64/include",
                "-LC:/msys64/mingw64/lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system"
            ],
            "group": { "kind": "build", "isDefault": true },
            "problemMatcher": ["$gcc"],
            "detail": "Build SFML app using g++ from MSYS2"
        }
    ]
}
